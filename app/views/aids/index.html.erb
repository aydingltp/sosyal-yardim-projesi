<p id="notice"><%= notice %></p>

<h1>Aids</h1>

<table>
  <thead>
    <tr>
      <th>Latitude</th>
      <th>Longitude</th>
      <th>Title</th>
      <th>Category</th>
      <th>Aid type</th>
      <th>Explanation</th>
      <th>Needy name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @aids.each do |aid| %>
      <tr>
        <td><%= aid.latitude %></td>
        <td><%= aid.longitude %></td>
        <td><%= aid.title %></td>
        <td><%= aid.category %></td>
        <td><%= aid.aid_type %></td>
        <td><%= aid.explanation %></td>
        <td><%= aid.needy_name %></td>
        <td><%= link_to 'Show', aid %></td>
        <td><%= link_to 'Edit', edit_aid_path(aid) %></td>
        <td><%= link_to 'Destroy', aid, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

